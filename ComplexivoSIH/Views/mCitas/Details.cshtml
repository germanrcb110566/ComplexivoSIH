@model ComplexivoSIH.Models.mCita

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="caja">
    <div id="texto-left" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta">- - <b>@ViewBag.msgmodulo</b> - -</div>
    <div id="texto-rigth" style="color: black; height:50px" class="alert alert-@ViewBag.alerta">@ViewBag.acceso</div>
</div>
<br />
<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.cita_id)
    @Html.HiddenFor(model => model.paciente_id)
    @Html.HiddenFor(model => model.medico_id)
    @Html.HiddenFor(model => model.especialidad_id)
    @Html.HiddenFor(model => model.fecha)
    @Html.HiddenFor(model => model.hora)
    @Html.HiddenFor(model => model.motivo)
    @Html.HiddenFor(model => model.estado)

    <div class="form-group">
        @Html.LabelFor(model => model.calificacion, "calificacion", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("calificacion", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.calificacion, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Grabar" class="btn btn-primary" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-success" })
</div>
<br />
<br />
<br />

<div id="msgerror" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta"><b>@ViewBag.error</b></div>





