<script>
    function jsInactivo(id) {
        url = "@Url.Content("~/mCatalogos/Inactivos")" + "/" + id;
            $.post(url, function (data){
                if (data == "1") {
                    document.location.href = "@Url.Content("~/mCatalogos/Index/1")"
                }
            })

    }
        function jsSoloInactivo(id) {
            url = "@Url.Content("~/mCatalogos/Inactivos")" + "/" + id;
            $.post(url, function (data){
                if (data == "2") {
                    document.location.href = "@Url.Content("~/mCatalogos/Index/2")"
                }
            })

    }
        function jsActivos(id) {
            url = "@Url.Content("~/mCatalogos/Inactivos")" + "/" + id;
            $.post(url, function (data){
                if (data == "3") {
                    document.location.href = "@Url.Content("~/mCatalogos/Index")"
                }
            })
    }
</script>