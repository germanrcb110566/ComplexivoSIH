@model IEnumerable<ComplexivoSIH.Models.mCalendario>

@{
    ViewBag.Title = "Sistema Hospitalario En Línea";
    Layout = ViewBag.layout;
    @*<script src="@Url.Content("~/Scripts/Catalogo/Index.js")"></script>*@
}

<div id="caja">
    <div id="texto-left" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta">- - <b>@ViewBag.msgmodulo</b> - -</div>
    <div id="texto-rigth" style="color: black; height:50px" class="alert alert-@ViewBag.alerta">@ViewBag.acceso</div>
</div>
<br />
<br />
<br />
<p>
    @Html.ActionLink("Crear Nuevo Registro", "Create", new { }, new { @class = "btn btn-info" }) |
    <input onclick="jsInactivo(1);" type="button" value="Ver Todos los Registros" class="btn btn-info" /> |
    <input onclick="jsSoloInactivo(2);" type="button" value="Ver Solo Inactivos" class="btn btn-info" /> |
    <input onclick="jsActivos(3);" type="button" value="Ver Solo Activos" class="btn btn-info" />
</p>
<table id="Tablas" class="table table-striped table-bordered" style="width:80%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.entre_semana)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fin_de_semana)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.horario_desde_m)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.horario_hasta_m)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.horario_desde_v)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.horario_hasta_v)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.intervalo_citas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.intervalo_fechas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.entre_semana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fin_de_semana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horario_desde_m)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horario_hasta_m)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horario_desde_v)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.horario_hasta_v)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.intervalo_citas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.intervalo_fechas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.calendario_id }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.calendario_id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.calendario_id })
            </td>
        </tr>
    }

</table>
<br />
<br />
<br />

<div id="msgerror" style="color: blue; height:50px" class="alert alert-@ViewBag.alerta"><b>@ViewBag.error</b></div>
<script>
    function jsInactivo(id) {
        url = "@Url.Content("~/mCalendarios/Inactivos")" + "/" + id;
            $.post(url, function (data){
                if (data == "1") {
                    document.location.href = "@Url.Content("~/mCalendarios/Index/1")"
                }
            })

    }
        function jsSoloInactivo(id) {
            url = "@Url.Content("~/mCalendarios/Inactivos")" + "/" + id;
            $.post(url, function (data){
                if (data == "2") {
                    document.location.href = "@Url.Content("~/mCalendarios/Index/2")"
                }
            })

    }
        function jsActivos(id) {
            url = "@Url.Content("~/mCalendarios/Inactivos")" + "/" + id;
            $.post(url, function (data){
                if (data == "3") {
                    document.location.href = "@Url.Content("~/mCalendarios/Index")"
                }
            })
    }
</script>